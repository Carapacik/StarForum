@model SForum.Models.Post.NewPostModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            New Post | @Model.ForumName
            <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
            <span id="headingBtn">
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Back to @Model.ForumName</a>
            </span>
        </div>
    </div>
    <div class="row">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="createPostSection">
                <div class="authorBlock">
                    You're submitting this post as <strong>@Model.AuthorName</strong>
                </div>
                <form asp-action="AddPost" method="post" id="addPostForm">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content">Post Content</label>
                        <textarea asp-for="Content" rows="20" class="form-control" placeholder="Write your post here."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Post</button>
                    <input asp-for="ForumId" type="hidden"/>
                </form>
            </div>
        }
        else
        {
            <div id="forumIndexContent">
                <div class="register">You must be a <a asp-area="Identity" asp-page="/Account/Register">registered member</a> to create a new post.</div>
            </div>
        }
    </div>
</div>